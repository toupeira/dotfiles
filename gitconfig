# vim: ft=gitconfig

[core]
  pager = less

[protocol]
  version = 2

[user]
  name = Markus Koller
  email = markus@snafu.ch
  signingKey = ~/.ssh/id_ed25519.pub

[gpg]
  format = ssh

[includeIf "gitdir:~/src/denteo/"]
  path = .gitconfig.denteo

[pager]
  diff = delta
  show = delta
  log = delta
  branch = less -FX

[color]
  ui = auto

[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[delta]
  navigate = true
  paging = always
  tabs = 2

  plus-emph-style = bold syntax auto
  minus-style = normal auto
  minus-emph-style = bold normal auto

  commit-decoration-style = yellow ul
  file-style = bold blue
  file-decoration-style = blue ul
  hunk-header-style = magenta line-number
  hunk-header-decoration-style = magenta
  hunk-header-file-style = bold magenta
  hunk-header-line-number-style = bold magenta

[advice]
  pushUpdateRejected = false
  statusHints = false
  commitBeforeMerge = false
  resolveConflict = false

[checkout]
  defaultRemote = origin

[commit]
  gpgSign = true

[diff]
  algorithm = histogram
  renames = copies
  mnemonicprefix = true
  ignoreSubmodules = dirty
  renameLimit = 10000

[difftool]
  prompt = false

[fetch]
  prune = true

[init]
  defaultBranch = main

[log]
  abbrevCommit = true
  decorate = true

[merge]
  stat = true
  tool = vimdiff

[mergetool]
  prompt = false
  keepBackup = false

[mergetool.gvimdiff]
  trustExitCode = false

[pull]
  rebase = true

[rebase]
  autosquash = true
  stat = true

[stash]
  showPatch = true
  showStat = true

[submodule]
  fetchJobs = 0

[tag]
  gpgSign = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[git-extras]
  default-branch = main

[alias]
  s = status -sb
  st = status
  sta = -c diff.ignoreSubmodules=none st
  modified = !git --no-pager diff HEAD --name-only
  untracked = ls-files --others --exclude-standard
  ss = !git --no-pager show --stat

  l = log --date=human-local --pretty=format:'%C(yellow)%h%Creset %C(green)[%ad]%Creset %C(037)%an:%Creset %C(white)%s%Creset%C(auto)%d%Creset'
  rl = reflog --date=format:'%F %T' --pretty=format:'%C(yellow)%h%Creset %C(037)%gD:%Creset %C(white)%gs%Creset%C(auto)%d%Creset'
  ls = "!cd ${GIT_PREFIX:-.} && git l --stat"
  ld = log -p
  ldf = ld --follow
  lg = l --graph
  msg = show -s --pretty=%b

  di = diff
  dc = diff --cached
  ds = diff --stat
  dh = diff HEAD

  b = rev-parse --abbrev-ref HEAD
  br = branch -vv
  bra = branch -vva
  cb = create-branch
  db = delete-branch
  bcontains = branch -a --contains

  co = checkout
  cm = !git checkout $( git default-branch )
  cd = checkout development
  switch-branch = "!f() { [ $# -gt 0 ] && exec git switch "$@"; branch=$( git branches 2>/dev/null | fzf +s --no-multi --prompt 'Branches> ' ) && git switch "$branch"; }; f"
  sb = switch-branch
  branches = "!git -c color.ui=always branch -a --sort=-committerdate | grep -Ev '(/HEAD|/(main|master))' | sed -r -e 's,^[\\* ]*,,' -e 's,remotes/[^/]+/,,'"
  default-branch = !(git symbolic-ref --short refs/remotes/origin/HEAD 2>/dev/null || git symbolic-ref --short refs/remotes/upstream/HEAD) | cut -d/ -f2-

  ap = add -p
  all = add -A
  unstage = reset HEAD -p
  discard = checkout -p

  ci = commit -v
  ca = ci -a
  amend = ci --amend
  reword = amend --only
  extend = amend --no-edit
  fixup = !sha=$( git -c color.ui=always l -n 1000 | fzf +s --no-multi --prompt 'Fixup> ' ) && git commit --fixup "${sha%% *}"
  wip = "!git commit -m \"WIP: Changes in $( echo $( git diff --cached --name-only ) )\""
  initial = commit --allow-empty -m 'Initial commit'

  r = remote -v
  shallow = clone --depth 1

  up = pull
  ff = merge --ff-only HEAD@{u}
  re = rebase
  ri = rebase -i
  rem = !git rebase $( git default-branch )
  rim = !git rebase -i $( git default-branch )
  rcontinue = rebase --continue
  rabort = rebase --abort
  solve = mergetool
  pom = !git pull origin $( git default-branch )
  pick = cherry-pick

  pu = push -v
  poof = pu --force-with-lease
  pusu = -c push.default=current pu --set-upstream
  puci = pusu -o ci.skip

  sub = submodule
  checkout-submodules = submodule update -q --init
  cos = checkout-submodules

  sts = stash push
  stp = stash pop
  std = "!git stash drop && git stl"
  stw = "!cd ${GIT_PREFIX:-.} && git stash show"
  stl = "!cd ${GIT_PREFIX:-.} && git --no-pager stash list"

  skip-lint = !LEFTHOOK=0 OVERCOMMIT_DISABLE=1 git

  # shell wrappers for src_alias
  sh = "!f() { [ $# -gt 0 ] && \"$@\"; }; f"
  bash = "!f() { [ $# -gt 0 ] && bash -ic \"$@\"; }; f"
  rg = !rg
  rake  = !rake
  rails = !rails
  guard = !guard
  cap = !cap
  mux = !mux
  vi = !vi
  vim = !vim

  # try to run a GUI, or tig on terminals
  g = "!f() { if [ \"`uname -s`\" = 'Darwin' ]; then (gitx $@ &>/dev/null &); elif [ -n \"$DISPLAY\" ]; then (gitg $@ &>/dev/null &); else tig $@; fi; }; f"
