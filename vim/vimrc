    let g:vista_default_executive = 'ctags'
    let g:vista_finder_alternative_executives = [ 'ctags' ]

    " let g:vista_executive_for = {
    "   \ 'sh': 'ale',
    "   \ 'javascript': 'ale',
    "   \ 'typescript': 'ale',
