    nnoremap <silent> ,t :Vista finder<CR>
    nnoremap <silent> ,T :Vista!!<CR>

    autocmd vimrc VimEnter * call vista#RunForNearestMethodOrFunction()

    let g:vista_sidebar_width = 40
