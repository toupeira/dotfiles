# vim: ft=sh

complete -o bashdefault -o default -F _root_command sudo watch
complete -o bashdefault -o default -F _command start
complete -F _pgrep psgrep

complete -o bashdefault -o default -o nospace -F _git -W 'sync up update ca commitall init install add' dotfiles dt
complete -o bashdefault -o default -o nospace -F _git pn

if alias g &>/dev/null; then
  complete -o bashdefault -o default -o nospace -F _git g
fi

complete -F _gem18 gem

_available() {
  COMPREPLY=( $(compgen -W "`apt-cache pkgnames ${COMP_WORDS[COMP_CWORD]} 2>/dev/null`") )
}
complete -F _available pkget

_installed() {
  COMPREPLY=( $(compgen -W "`dglob ${COMP_WORDS[COMP_CWORD]}`") )
}
complete -F _installed pkglist pkgpurge pkgremove debbugs debpackages
