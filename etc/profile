function down {
  local i
  for i in `seq 1 $(tput lines)`; do
    echo
  done
}

function .home {
  cd; down
  fortune
  echo; echo
  date "+%A, %e. %B %Y  %k:%M"
  echo; ls; echo
}

function mount.loop {
  mount="/mnt/loop"
  [ -n "$2" ] && mount="$2"

  if [ ! -n "$1" ]; then
    echo "Usage: mount.loop IMAGE [MOUNTPOINT]"
    return 255
  elif [ ! -f "$1" ]; then
    echo "Image $1 not found."
    return 1
  elif mountpoint -q "$mount"; then
    echo "$mount is already mounted."
    return 1
  else
    sudo mount -v -o loop "$1" "$mount" | tail -1
  fi
}


umask 022
