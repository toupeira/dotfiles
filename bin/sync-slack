#!/bin/bash

if [ "$HOSTNAME" = "ocelot" ]; then
  target="schtube"
else
  target="ocelot"
fi

paths=${1:-music sound photos games}

for path in $paths; do
  echo
  echo -e " \e[1;32m‚óè\e[22m \e[22mSyncing \e[1m$path\e[22m with \e[1;33m$target\e[0m"

  case "$path" in
    games)
      args=( -ignore 'Path steam' );;
    *)
      args=();;
  esac

  unison \
    -log=false \
    -fastcheck=true \
    -links=true \
    -times \
    -sortnewfirst \
    -ignoreinodenumbers \
    "${args[@]}" \
    "/slack/$path/" \
    "ssh://$target//slack/$path/"
done
