#!/bin/bash

cd /slack/sound/manuals || exit 1
[ $# -eq 0 ] && exec xdg-open .

files=$( find . -name '*.pdf' | fzf -f "$*" )
manual=$( echo "$files" | grep -Fim1 manual )
[ "$manual" ] || manual=$( echo "$files" | head -1 )

if [ -f "$manual" ]; then
  xdg-open "$manual"
else
  notify -i dialog-no "Couldn't find manual for '$*'"
fi
