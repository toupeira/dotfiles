#!/bin/bash

choice=$(
  zenity --info \
    --title "Shutdown" --icon-name=system-shutdown \
    --text "What do you want to do?" \
    --ok-label "Suspend" \
    --extra-button "Power off" \
    --extra-button "Reboot"
)

if [ $? -eq 0 ] || [ -n "$choice" ]; then
  case "$choice" in
    "Power off") gnome-session-quit --no-prompt --power-off;;
    "Reboot"   ) gnome-session-quit --no-prompt --reboot;;
    *          ) systemctl suspend;;
  esac
fi
