#!/bin/bash

case "$HOSTNAME" in
  ocelot)
    BACKUP="/mnt/slack"
    DIRS="books documents images music photos scrapbook sound"
    ;;
  schtube)
    BACKUP="/media/$USER/SLACK-BACKUP"
    DIRS="movies series"
    ;;
  *)
    echo "Unsupported host $HOSTNAME"
    exit 1
    ;;
esac

if ! mountpoint -q "$BACKUP"; then
  echo "$BACKUP is not mounted."
  exit 1
fi

cd /slack || exit 1

rsync -av --update --delete \
  $DIRS "$BACKUP" "$@"
