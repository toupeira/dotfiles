#!/bin/bash

merged_branches=$(
  git branch --format '%(refname:short)' --merged \
    | grep -Evx "$( git default-branch )|$( git rev-parse --abbrev-ref HEAD )|develop|development"
)

function ask_yes {
  echo -ne "$1 [Y/n]\e[0m "
  read
  [ "$REPLY" != "N" -a "$REPLY" != "n" ]
}

for branch in $merged_branches; do
  ask_yes " \e[1;36m>\e[0m Remove branch \e[1;33m$branch\e[0m?" || continue

  git branch -d "$branch"
done
