#!/bin/bash
[ "$1" ] || exit 1

if [ "$1" = "-" ]; then
  shift
  for app in $@; do
    if ! command -v "$app" &>/dev/null; then
      echo " [1;34m$app[0m not found"
      continue
    fi
    echo " started [1;34m$app[0m"
    $app &>/dev/null &
  done
else
  command -v "$1" &>/dev/null || exec echo " [1;34m$1[0m not found"
  echo " started [1;34m$1[0m"
  exec "$@" &>/dev/null &
fi
