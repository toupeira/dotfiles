#!/bin/bash

unset force keep dryrun

while [ "${1:0:1}" = "-" ]; do
  case "$1" in
    -f)
      force=1
      ;;
    -k)
      keep="$2"
      shift
      ;;
    -n)
      dryrun=1
      ;;
    --)
      break
      ;;
    -)
      exec echo "Usage:  nrename [-f] [-n] [-k PATTERN] FILE [FILE..]"
      ;;
  esac
  shift
done

i=1
for file in "$@"; do
  name="${file%.*}"
  ext=`echo "${file##*.}" | sed -r 's/(\w)/\l\1/g'`

  if [ "$force" ]; then
    episode=`printf '%02d' $i`
    let i++
  else
    episode="\3"
  fi

  newname=`echo "$name" | sed -r 's/[\._]/ /g' | sed -r "s/^(.+)\s+S?([0-9]{1,2})[Ex]([0-9]{2})($keep).*/\1 \2x$episode\4/i" | sed -r 's/ ([0-9]x)/ 0\1/' | sed -r -e 's|(\w)|\l\1|g' -e 's|^(\w)|\u\1|' -e 's|([ \.-])(\w)|\1\u\2|g'`
  if [ "$newname" = "$name" ]; then
    echo "Skipping: $file"
  elif [ "$dryrun" ]; then
    echo "--"
    echo "Old: $name"
    echo "New: $newname"
  else
    mv -vi "$file" "$newname.$ext"
  fi
done
