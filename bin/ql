#!/bin/bash

QL=~/.config/quodlibet
CONTROL=$QL/control
CONFIG=$QL/config

DEFAULT_QUERY="\&(#(rating > 0.4), #(added < 1 year))"

command="$1"
argument="$2"

case "$command" in
  start-hidden)
    shift
    [ -f "$CONFIG" ] && sed -ri "s/^(query_text =).*/\1 $DEFAULT_QUERY/" "$CONFIG"
    [ "$( hostname )" = "schtube" ] && stop='--stop'
    quodlibet --run --start-hidden $stop "$@" &>/dev/null &
    exit
    ;;
  start-playing)
    exec $0 start-hidden --play
    ;;
  rating)
    icon="quodlibet"
    stars="Rating set to "

    for _ in $( seq 0.2 0.2 "$argument" ); do
      stars="$starsâ­"
    done

    filename=$( awk -F= '/^~filename/ { print $2 }' $QL/current 2>/dev/null )
    if [ -f "$filename" ]; then
      cover=$( find "$( dirname "$filename" )"/cover.* 2>/dev/null | head -1 )
      [ -f "$cover" ] && icon="$cover"
    fi

    notify -i "$icon" -h string:desktop-entry:quodlibet "$( quodlibet --print-playing )" "$stars"
    ;;
esac

if [ ! -p "$CONTROL" ] || ! pgrep -x quodlibet &>/dev/null; then
  echo "Quod Libet is not running."
  exit 1
elif [ "$command" = "running" ]; then
  exit 0
fi

if [ -n "$argument" ]; then
  echo "$command $argument" > "$CONTROL"
else
  echo "$command" > "$CONTROL"
fi
